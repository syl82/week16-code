            steps{
                 
               sh 'curl -uadmin:AP92tQt6UEmYygiU98AGS2ZZypn -T \
                target/bio*.jar "http://ec2-18-208-114-181.compute-1.amazonaws.com:8081/artifactory/geoapp/"'
                
